APP="instaghub"

BUILD_HOST="instaghub.com"
BUILD_USER="root"
BUILD_AT="/root/instaghub/app_build"

PRODUCTION_HOSTS="instaghub.com" 
PRODUCTION_USER="root" 
DELIVER_TO="/root/instaghub/app_release"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/root/instaghub/app_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}